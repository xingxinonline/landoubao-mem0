# Mem0服务配置
MEM0_URL=http://localhost:8000
ZHIPU_API_KEY=your_api_key_here

# ========== 记忆维护服务配置 ==========
# 衰减参数
MAINTENANCE_DECAY_ALPHA=0.01

# 五层记忆阈值
MAINTENANCE_FULL_THRESHOLD=0.7      # 完整记忆阈值 (> 0.7)
MAINTENANCE_SUMMARY_THRESHOLD=0.3   # 摘要记忆阈值 (0.3 ~ 0.7)
MAINTENANCE_TAG_THRESHOLD=0.1       # 标签记忆阈值 (0.1 ~ 0.3)
MAINTENANCE_TRACE_THRESHOLD=0.03    # 痕迹记忆阈值 (0.03 ~ 0.1)
# ≤ 0.03 为存档记忆

# 定时任务配置
MAINTENANCE_SCAN_INTERVAL_HOURS=24  # 扫描间隔（小时）
MAINTENANCE_BATCH_SIZE=100          # 批处理大小
MAINTENANCE_TEST_MODE=false         # 测试模式

# ========== 模拟测试配置 ==========
# 时间单位配置
SIM_TIME_UNIT=second                # second 或 minute
SIM_TIME_SCALE=1.0                  # 时间加速倍数（1单位 = 多少天）

# 执行周期
SIM_SCAN_INTERVAL=10                # 扫描间隔（秒）
SIM_DECAY_ALPHA=0.5                 # 衰减系数（模拟环境建议 0.5-2.0）
SIM_MAX_CYCLES=10                   # 最大测试周期数（0=无限）

# 测试数据
SIM_USER_ID=test_user_sim           # 测试用户ID
SIM_CREATE_MEMORIES=5               # 自动创建测试记忆数量

# ========== 快速测试场景预设 ==========
# 取消注释下面的配置来使用快速测试场景

## 场景1: 快速验证（10秒周期，5次循环）
# SIM_SCAN_INTERVAL=10
# SIM_DECAY_ALPHA=0.5
# SIM_MAX_CYCLES=5

## 场景2: 闪电测试（5秒周期，极速衰减）
# SIM_SCAN_INTERVAL=5
# SIM_DECAY_ALPHA=2.0
# SIM_MAX_CYCLES=12
# SIM_TIME_SCALE=1.0

## 场景3: 分钟级测试（30秒周期，1分钟=10天）
# SIM_SCAN_INTERVAL=30
# SIM_TIME_UNIT=minute
# SIM_TIME_SCALE=10.0
# SIM_DECAY_ALPHA=1.0
# SIM_MAX_CYCLES=10
