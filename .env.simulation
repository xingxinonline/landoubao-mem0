# 记忆维护服务模拟测试配置
# 用于快速验证记忆衰减和层次转换（秒/分钟级别）

# ============================================================
# 服务配置
# ============================================================
MEM0_URL=http://localhost:8000
ZHIPU_API_KEY=your_api_key_here

# ============================================================
# 时间模拟配置（核心参数）
# ============================================================
# 时间单位：second（秒）或 minute（分钟）
TIME_UNIT=second

# 时间缩放比例：1个时间单位 = 多少天
# 示例：TIME_SCALE=1.0 表示 1秒=1天（快速模拟）
#       TIME_SCALE=0.1 表示 10秒=1天（更细粒度）
TIME_SCALE=1.0

# 扫描间隔（秒）：每隔多少秒执行一次维护周期
SCAN_INTERVAL_SECONDS=5

# ============================================================
# 衰减参数配置
# ============================================================
# 衰减系数α：控制记忆衰减速度
# 公式：w(t) = w₀ / (1 + α * t)
# 
# 典型值参考：
#   α=0.1  慢速衰减（30天后权重=0.25）
#   α=0.5  中速衰减（30天后权重=0.06）
#   α=1.0  快速衰减（30天后权重=0.03）
#   α=2.0  极快衰减（30天后权重=0.02）
DECAY_ALPHA=1.0

# ============================================================
# 层次阈值配置（五层记忆架构）
# ============================================================
# 完整记忆 → 摘要记忆：7天未访问
THRESHOLD_FULL_TO_SUMMARY=7

# 摘要记忆 → 标签记忆：30天未访问
THRESHOLD_SUMMARY_TO_TAG=30

# 标签记忆 → 痕迹记忆：90天未访问
THRESHOLD_TAG_TO_TRACE=90

# 痕迹记忆 → 存档记忆：180天未访问或权重<0.015
THRESHOLD_TRACE_TO_ARCHIVE=180
THRESHOLD_WEIGHT_ARCHIVE=0.015

# ============================================================
# 测试场景预设（快速切换）
# ============================================================
# 
# 场景1: 快速验证（3分钟完成）
#   TIME_UNIT=second
#   TIME_SCALE=1.0
#   SCAN_INTERVAL_SECONDS=3
#   DECAY_ALPHA=2.0
#   MAX_CYCLES=5
#
# 场景2: 细粒度观察（10分钟完成）
#   TIME_UNIT=second
#   TIME_SCALE=0.5
#   SCAN_INTERVAL_SECONDS=10
#   DECAY_ALPHA=1.0
#   MAX_CYCLES=20
#
# 场景3: 真实模拟（1小时完成）
#   TIME_UNIT=minute
#   TIME_SCALE=1.0
#   SCAN_INTERVAL_SECONDS=60
#   DECAY_ALPHA=0.5
#   MAX_CYCLES=60

# ============================================================
# 测试控制
# ============================================================
# 最大测试周期数（用于CLI测试）
MAX_CYCLES=3

# 是否自动创建测试记忆
AUTO_CREATE_MEMORIES=false

# 自动创建记忆数量
CREATE_MEMORIES_COUNT=5

# ============================================================
# 日志配置
# ============================================================
LOG_LEVEL=INFO
LOG_FILE=maintenance_simulation.log
